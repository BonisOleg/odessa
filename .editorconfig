# EditorConfig - налаштування для консистентного стилю коду
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,pyi}]
indent_style = space
indent_size = 4
max_line_length = 100

[*.{js,jsx,ts,tsx,json}]
indent_style = space
indent_size = 2
max_line_length = 100

[*.{html,htm}]
indent_style = space
indent_size = 2
# Дозволяє довгі рядки без розривів Django тегів {{ }} та {% %}
max_line_length = off
trim_trailing_whitespace = true

[*.{css,scss,sass}]
indent_style = space
indent_size = 2
max_line_length = 100

[*.{md,markdown}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_style = space
indent_size = 2
max_line_length = 100

[Makefile]
indent_style = tab
